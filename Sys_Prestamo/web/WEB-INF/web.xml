<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PrestamoController</servlet-name>
        <servlet-class>Controller.PrestamoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EquipoController</servlet-name>
        <servlet-class>Controller.EquipoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SVL_Persona</servlet-name>
        <servlet-class>Controller.SVL_Persona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SVL_Equipo</servlet-name>
        <servlet-class>Controller.SVL_Equipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SVL_Prestamo</servlet-name>
        <servlet-class>Controller.SVL_Prestamo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrestamoController</servlet-name>
        <url-pattern>/loan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EquipoController</servlet-name>
        <url-pattern>/ec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SVL_Persona</servlet-name>
        <url-pattern>/SVLP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SVL_Equipo</servlet-name>
        <url-pattern>/SVLE</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SVL_Prestamo</servlet-name>
        <url-pattern>/SVLPR</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
